@model IEnumerable<MyAZHRM.Models.ProductsModel>

@{
    ViewBag.Title = "My Products";
}

@Styles.Render("~/CustomCSS/datatables.min.css")

<style>

    .tblStyleRight 
    {
        text-align: right !important;
        vertical-align: middle !important;
    }

    .tblStyleLeft 
    {
        text-align: left !important;
        vertical-align: middle !important;
    }

    .tblStyleCenter 
    {
        text-align: center !important;
        vertical-align: middle !important;
    }

    .table 
    {
        color: #676a6c!important;
    }

    .tblCellStyleCenter 
    {
        text-align:center !important;
        vertical-align: middle !important;
        width: 30% !important;
        display: inline-block !important;
    }

    .tblCellStyleRight 
    {
        text-align: right !important;
        vertical-align: middle !important;
        width: 60% !important;
        display: inline-block !important;
    }

    table 
    {
        counter-reset: tableCount;
    }

    .counterCell:before 
    {
        content: counter(tableCount);
        counter-increment: tableCount;
    }

</style>



@*Common For All Pages*@
@*<div class="row">
    <div class="col-lg-12">*@
<div class="ibox" style="width:100%!important;">
    <div class="ibox-title">
        <h2 class="font-bold">My Products</h2>
    </div>
    <div class="ibox-content">



        <div class="table-responsive">
            <table id="dtTblProducts" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="tblStyleCenter"> # </th>
                        <th class="tblStyleCenter">Company Name</th>
                        <th class="tblStyleCenter">Employee Count</th>
                        <th class="tblStyleCenter">Package</th>
                        <th class="tblStyleCenter">Due Amount</th>
                        <th class="tblStyleCenter">Next Billing Date</th>
                        <th class="tblStyleCenter">Status</th>
                        <th class="tblStyleCenter">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td class="tblStyleCenter counterCell"> </td>
                            <td class="tblStyleLeft"> @Html.DisplayFor(modelItem => item.CompanyName) </td>
                            <td class="tblStyleCenter"> @Html.DisplayFor(modelItem => item.EmployeeCount) </td>

                            <td class="tblStyleLeft"> @Html.DisplayFor(modelItem => item.PackageName) </td>
                            <td>
                                 
                                <div class="tblCellStyleCenter">
                                    @Html.DisplayFor(modelItem => item.Currency)
                                </div>
                                 
                                <div class="tblCellStyleRight">
                                    @Convert.ToDecimal(item.DueAmount).ToString("#,##0.00")
                                </div>

                            </td>

                            @*<td class="tblStyleCenter"> @Convert.ToDateTime(item.NextBillingDate).ToString("dd-MMM-yyyy") </td>*@
                            
                            <td class="tblStyleCenter"> 
                                                    
                              @if (item.NextBillingDate == Convert.ToDateTime(MyAZHRM.Models.Globals.DEFAULT_DATE))
                              {
                                @Convert.ToString("-") 
                              }
                              else
                              { 
                                @Convert.ToDateTime(item.NextBillingDate).ToString("dd-MMM-yyyy") 
                              }
                                                            
                            </td>

                            <td class="tblStyleCenter"> @Html.DisplayFor(modelItem => item.Status) </td>
                            <td class="tblStyleCenter">                                                                                                                  
                                @*<a href="@Url.Action("AddProduct", "Products", new { ProductId = item.Id, CmpName = item.CompanyName, EmpCount = item.EmployeeCount })"> <i class="fa fa-pencil-square-o" style="color: #1ab394; font-size: 24px;" title="Edit Details"> </i> </a>*@       
                                <a href="@Url.Action("AddProduct", "Products", new { ProductId = item.Id, PackageId = item.PackageId })"> <i class="fa fa-pencil-square-o" style="color: #1ab394; font-size: 24px;" title="Edit Details"> </i> </a>                                                            
                            </td>                      
                        </tr>
                    }
                </tbody>
            </table>                   
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-9">
                </div>
                <div class="col-md-3">
                    <a href="~/Products/AddProduct" class="btn btn-primary block full-width m-b"> Add Product </a>
                </div>                
            </div>
        </div>


    </div>
</div>
@*</div>
</div>*@



